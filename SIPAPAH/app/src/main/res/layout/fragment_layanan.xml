<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/hijau2"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/mmedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIPAPAH"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/putih"/>

    </RelativeLayout>

    <LinearLayout
        android:paddingHorizontal="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:fontFamily="@font/mbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="LAYANAN"
            android:textStyle="bold"
            android:textColor="@color/hitam"
            android:textSize="15dp"/>

        <TextView
            android:fontFamily="@font/mmedium"
            android:layout_margin="10dp"
            android:textColor="@color/abuabugelap"
            android:text="Di fitur Layanan, kami memberikan jasa untuk menjemput Sampah "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/btn_tentang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btn_pesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pesan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Mulai membuat pesanan"
                    android:fontFamily="@font/mmedium"
                    android:textColor="@color/hitam"/>

                <ImageView
                    android:layout_alignRight="@+id/tv_pesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_chevron_right_24" />

            </LinearLayout>



        </RelativeLayout>



    </LinearLayout>


</LinearLayout>