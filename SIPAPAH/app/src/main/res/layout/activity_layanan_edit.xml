        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_calendar_today_24"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15dp"
                    android:background="@color/putih"
                    android:fontFamily="@font/mmedium"
                    android:gravity="center"
                    android:id="@+id/tv_layanan_edit_tanggaljemput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal yang Dipilih"/>

                <Button
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/mmedium"
                    android:gravity="center"
                    android:id="@+id/btn_layanan_edit_tanggalJemput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Tanggal Jemput"
                    android:textColor="@color/putih"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_note_alt_24"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:fontFamily="@font/mlight"
                    android:id="@+id/edt_layanan_edit_keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/putih"
                    android:hint="Keterangan (pesan untuk pengepul)"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:fontFamily="@font/mmedium"
            android:layout_margin="30dp"
            android:id="@+id/btn_layanan_edit_buatpesanan"
            android:backgroundTint="@color/hijau2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Perbarui Pesanan"/>

    </LinearLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_loading"
        android:layout_centerInParent="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</RelativeLayout>