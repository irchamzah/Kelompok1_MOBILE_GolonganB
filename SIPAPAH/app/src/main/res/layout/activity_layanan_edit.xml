<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BaruActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/img_layanan_edit_foto"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@color/abuabu"
            android:src="@drawable/sipapa_hijau"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <Button
            android:fontFamily="@font/mmedium"
            android:id="@+id/btn_layanan_edit_foto"
            android:layout_gravity="center"
            android:text="Pilih Foto"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_kreasi"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="11dp"
                    android:fontFamily="@font/mlight"
                    android:text="*Pilih Kategori Sampah : 1(Kertas), 2(Kardus), 3(Plastik)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:fontFamily="@font/mlight"
                    android:id="@+id/edt_layanan_edit_kategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/putih"
                    android:hint="Ketik 1/2/3"
                    android:inputType="text"
                    android:singleLine="true"
                    android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

